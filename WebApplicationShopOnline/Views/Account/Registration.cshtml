@model Registration

<div class="text-left">
    <h1 class="display-4">Регистрация пользователя</h1>
    <form asp-action="Registration" asp-controller="Account">
        <div class="form-group">
            <label asp-for="UserName">Имя пользователя</label>
            <input asp-for="UserName" class="form-control" placeholder="Введите имя пользователя, оно может совпадать с почтой">
            <span asp-validatin-for="UserName" />
        </div>
        <div class="form-group">
            <label asp-for="Namber">Телефон</label>
            <input asp-for="Namber" class="form-control" placeholder="Введите номер телефона">
            <span asp-validatin-for="Namber" />
        </div>
        <div class="form-group">
            <label asp-for="Address">Адрес</label>
            <input asp-for="Address" class="form-control" placeholder="Введите адрес проживания">
            <span asp-validatin-for="Address" />
        </div>
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" class="form-control" placeholder="Введите почту">
            <span asp-validatin-for="Email" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Пароль</label>
            <input asp-for="Password" class="form-control">
            <span asp-validatin-for="Password" />
        </div>
        <button type="submit" class="btn btn-primary">Зарегистрировать</button>
    </form>

</div>
