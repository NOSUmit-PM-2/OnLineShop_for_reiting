@model WebApplicationShopOnline.Models.Registration

<div class="text-left">
    <h1 class="display-4">Регистрация пользователя</h1>

    <form asp-action="Registration" asp-controller="Account" method="post">
        <div class="form-group">
            <label asp-for="UserName">Имя пользователя</label>
            <input asp-for="UserName" class="form-control" placeholder="Введите имя пользователя">
            <span asp-validation-for="UserName" class="text-danger" />
        </div>

        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" class="form-control" placeholder="Введите почту">
            <span asp-validation-for="Email" class="text-danger" />
        </div>

        <div class="form-group">
            <label asp-for="Password">Пароль</label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger" />
        </div>

        <button type="submit" class="btn btn-primary">Зарегистрировать</button>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
