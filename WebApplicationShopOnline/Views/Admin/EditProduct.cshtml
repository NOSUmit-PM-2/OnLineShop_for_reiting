@model Product
<div class="row">
    <div class="col">
        @await Html.PartialAsync("SideMenu")
    </div>
    <div class="col-9">
        <h2>Редактировать продукт</h2>
        <form asp-action="EditProduct" asp-controller="Admin" method="post">
            <input type="hidden" name="Id" value="@Model.Id" />

            <div class="mb-3">
                <label class="form-label">Название продукта</label>
                <input type="text" class="form-control" name="Name" value="@Model.Name" required>
            </div>

            <div class="mb-3">
                <label class="form-label">Описание продукта</label>
                <textarea class="form-control" name="Description">@Model.Description</textarea>
            </div>

            <div class="mb-3">
                <label class="form-label">Цена</label>
                <input type="number" step="0.01" class="form-control" name="Cost" value="@Model.Cost" required>
            </div>

            <div class="mb-3">
                <label class="form-label">Количество</label>
                <input type="number" class="form-control" name="Quantity" value="@Model.Quantity" required min="0">
            </div>

            <div class="mb-3">
                <label class="form-label">URL картинки</label>
                <input type="text" class="form-control" name="PathPicture" value="@Model.PathPicture">
            </div>

            <button type="submit" class="btn btn-primary">Сохранить</button>
        </form>
    </div>
</div>