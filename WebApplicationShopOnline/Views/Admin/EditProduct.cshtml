@model Product
<div class="row">
    <div class="col">
        @await Html.PartialAsync("SideMenu")
    </div>
    <div class="col-9">
        <h2>Редактировать продукт</h2>
        <form asp-action="EditProduct" asp-controller="admin" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <input type="hidden" asp-for="Id" />
            
            <div class="mb-3">
                <label class="form-label">Название продукта</label>
                <input type="text" class="form-control" asp-for="Name">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Описание продукта</label>
                <input type="text" class="form-control" asp-for="Description">
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Цена</label>
                <input type="number" step="0.01" class="form-control" asp-for="Cost">
                <span class="text-danger" asp-validation-for="Cost"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">URL картинки</label>
                <input type="url" class="form-control" asp-for="PathPicture">
                <span class="text-danger" asp-validation-for="PathPicture"></span>
            </div>

            <button type="submit" class="btn btn-primary">Сохранить</button>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}