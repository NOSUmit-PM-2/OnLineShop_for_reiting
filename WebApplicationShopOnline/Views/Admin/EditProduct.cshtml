@model Product
<div class="row">
    <div class="col">
        @await Html.PartialAsync("SideMenu")
    </div>
    <div class="col-9">
        <h2>Редатировать продукт</h2>
        <form asp-action="EditProduct" asp-controller="admin">
            <div class="mb-3">
                <label class="form-label">Id продукта</label>
                <input type="text" class="form-control" name="Id" value="@Model.Id" readonly>
            </div>
            <div class="mb-3">
                <label class="form-label">Название продукта</label>
                <input type="text" class="form-control" name="Name" value="@Model.Name" asp-for="Name">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Описание продукта</label>
                <input type="text" class="form-control" name="Description" value="@Model.Description" asp-for="Description">
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Цена</label>
                <input type="number" step="0.01" class="form-control" name="Cost" value="@Model.Cost" asp-for="Cost">
                <span class="text-danger" asp-validation-for="Cost"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">URL картинки</label>
                <input type="text" class="form-control" name="PathPicture" value="@Model.PathPicture" asp-for="PathPicture">
                <span class="text-danger" asp-validation-for="PathPicture"></span>
            </div>
            <button type="submit" class="btn btn-primary">Сохранить</button>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}